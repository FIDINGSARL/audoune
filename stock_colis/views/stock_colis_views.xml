<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_colis_tree" model="ir.ui.view">
            <field name="name">stock.colis.tree</field>
            <field name="model">stock.colis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="company_dest_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_stock_colis_form" model="ir.ui.view">
            <field name="name">stock.colis.form</field>
            <field name="model">stock.colis</field>
            <field name="arch" type="xml">
                <form string="Colis">
                    <header>
                        <button name="action_open" string="Envoyer" type="object"
                                 class="oe_highlight" attrs="{'invisible': [('show_send', '!=', True)]}"/>
                        <button name="action_valid" string="Valider" type="object"
                                class="oe_highlight" attrs="{'invisible': [('show_validate', '!=', True)]}"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <field name="show_validate" invisible="1"/>
                            <field name="show_send" invisible="1"/>
                            <field name="user_id" options="{'no_create': True, 'no_open': True}" readonly="1"/>
                            <field name="company_id" options="{'no_create': True, 'no_open': True}" readonly="1"/>
                            <field name="company_dest_id" options="{'no_create': True, 'no_open': True}"
                                   attrs="{'readonly': [('state', '!=', 'new')], 'required': True}"/>
                            <field name="is_destinataire" invisible="1"/>
                        </group>
                        <group states="valid">
                            <field name="stock_inventory_source_id" options="{'no_create': True}"
                                   attrs="{'readonly': True}"/>
                            <field name="stock_inventory_dest_id" options="{'no_create': True}"
                                   attrs="{'readonly': True}"/>
                            <field name="received_cheque_ids" attrs="{'invisible': [('is_destinataire', '=', False)]}"
                                   options="{'no_create': True}"/>

                        </group>
                        <notebook attrs="{'invisible': [('is_destinataire', '=', True)]}">
                            <page string="Empreintes">
                                <field name="empreinte_lot_ids" domain="[('product_id.name', 'like', 'Emprei')]"
                                       options="{'no_create': True}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="ref"/>
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Articles">
                                <field name="product_lot_ids" domain="[('product_id.name', 'not like', 'Emprei')]"
                                       options="{'no_create': True}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="ref"/>
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="ChÃ¨ques">
                                <field name="cheque_ids" options="{'no_create': True}"/>
                            </page>
                            <page string="Dossier Physique">
                                <field name="dossier_physique">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="partner_id" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Divers">
                                <field name="divers"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_stock_colis">
            <field name="name">Colis</field>
            <field name="res_model">stock.colis</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_stock_colis"
                sequence="2"
                action="action_stock_colis"
                name="Colis"
                parent="stock.menu_stock_warehouse_mgmt"
        />


    </data>
</odoo>